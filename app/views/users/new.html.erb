<div class='container'>
<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <%= f.text_field :email, placeholder: 'email' %> <br>
  <%= f.password_field :password , placeholder: 'password' %> <br>
  <%= f.password_field :password_confirmation, placeholder: 're-type password' %> <br><br>
  <%= f.submit "Submit", class: "btn-primary", id: "login-button"%>

<% end %>
</div>