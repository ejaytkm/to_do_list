<div class='container'>
	<h1> This is the edit </h1>
	<%= form_for [@user, @list], url: {action: "update"}  do |f| %>

		<%= f.label :Title  %><br>
		<%= f.text_field :title, size: "60x2" %><br>


		<%= f.label :Description %><br>
		<%= f.text_area :description, size: "60x6" %><br>

		<p style="padding-left: 40%"> <%= f.file_field :avatar %> </p>
		<%= f.submit "Edit Campaign"%>
	<% end %>
</div>